<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:showDividers="middle">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_work"
                style="@style/titleStyle"
                android:text="@string/title_work"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/text_work"
                style="@style/textStyle"
                android:text="@string/text_work"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/title_notime"
                style="@style/titleStyle"
                android:text="@string/title_notime"/>

            <TextView
                android:id="@+id/text_notime"
                style="@style/textStyle"
                android:text="@string/text_notime"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/title_whydeclutter"
                style="@style/titleStyle"
                android:text="@string/title_whydeclutter"/>

            <TextView
                android:id="@+id/text_whydeclutter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="10sp"
                android:textColor="@color/gray"
                android:text="@string/bulleted_list"
                android:layout_margin="20dp" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>